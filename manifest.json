{
  "manifest_version": 3,
  "name": "Tool for Tester",
  "version": "1.0",
  "description": "A comprehensive toolkit for testers and developers with responsive viewer, font scanner, and more.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Tool for Tester",
    "default_icon": "assets/icon.png"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/interceptor.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}