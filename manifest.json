{
  "manifest_version": 3,
  "name": "Tools for Tester",
  "version": "2.1",
  "description": "A comprehensive toolkit for testers and developers with Preaw & Champ",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Tool for Tester",
    "default_icon": "assets/icon.png"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/utils.js",
        "content/tools/font-scanner.js",
        "content/tools/color-picker.js",
        "content/tools/inspector.js",
        "content/tools/live-editor.js",
        "content/tools/api-monitor.js",
        "content/manager.js",
        "content/main.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/interceptor.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}